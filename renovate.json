{
  "extends": [
    ":autodetectPinVersions",
    ":combinePatchMinorReleases",
    ":dependencyDashboard",
    ":ignoreModulesAndTests",
    ":ignoreUnstable",
    ":separateMultipleMajorReleases",
    ":updateNotScheduled",
    "workarounds:all",
    "group:monorepos",
    "group:recommended"
  ],
  "dependencyDashboardAutoclose": true,
    "hostRules": [
    {
      "hostType": "maven",
      "matchHost": "https://maven.pkg.github.com/"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "labels": ["UPDATE-MAJOR"]
    },
     {
      "extends": ["group:springBoot"],
      "automerge": false
    },
    {
      "matchPackageNames": ["com.github.spotbugs:com.github.spotbugs.gradle.plugin"],
      "allowedVersions": ">5.0.1"
    },
     {
      "matchManagers": ["gradle"],
      "additionalBranchPrefix": "java-",
      "groupName": "java",
      "labels": ["java"]
    },
     {
      "matchDatasources": ["gradle-version"],
      "additionalBranchPrefix": "gradle-",
      "labels": ["java"]
    }
  ]
}
