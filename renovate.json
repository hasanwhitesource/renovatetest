{
  "extends": [
    ":autodetectPinVersions",
    ":autodetectPinVersions",
    ":automergeBranch",
    ":automergeMinor",
    ":automergeRequireAllStatusChecks",
    ":combinePatchMinorReleases",
    ":dependencyDashboard",
    ":ignoreModulesAndTests",
    ":ignoreUnstable",
    ":label(renovate)",
    ":separateMultipleMajorReleases",
    ":updateNotScheduled",
    "workarounds:all",
    "group:monorepos",
    "group:recommended"
  ],
  "commitMessagePrefix": "[renovate]",
  "dependencyDashboardAutoclose": true,
  "labels": ["renovate"],
  "packageRules": [
      {
      "matchUpdateTypes": ["major"],
      "labels": ["major-update"],
       "automerge": false
    },
     {
      "extends": ["group:springBoot"],
      "automerge": false
    },
    {
      "matchPackageNames": ["com.github.spotbugs:com.github.spotbugs.gradle.plugin"],
      "allowedVersions": ">5.0.1"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": false,
      "automergeType": "branch",
      "labels": ["automerge"]
    },
     {
      "matchPaths": ["gradle/**"],
      "matchManagers": ["gradle"],
      "additionalBranchPrefix": "java-",
      "groupName": "java",
      "labels": ["java"]
    },
     {
      "matchDatasources": ["gradle-version"],
      "additionalBranchPrefix": "gradle-",
      "labels": ["java"]
    }
  ]
}
