{
  "extends": [
    "config:base",
    "workarounds:all",
    "group:monorepos",
    "group:recommended",
  ],
    "hostRules": [
    {
      "hostType": "maven",
      "matchHost": "https://maven.pkg.github.com/"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "labels": ["UPDATE-MAJOR"]
    },
     {
      "extends": ["group:springBoot"],
      "automerge": false
    },
    {
      "matchPackageNames": ["com.github.spotbugs:com.github.spotbugs.gradle.plugin"],
      "allowedVersions": ">5.0.1"
    },
     {
      "matchManagers": ["gradle"],
      "additionalBranchPrefix": "java-",
      "groupName": "java",
      "labels": ["java"]
    },
     {
      "matchDatasources": ["gradle-version"],
      "additionalBranchPrefix": "gradle-",
      "labels": ["java"]
    }
  ]
}
