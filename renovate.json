{
  "extends": [
    ":assignAndReview(KayBestmann1123)",
    ":autodetectPinVersions",
    ":automergeBranch",
    ":automergeMinor",
    ":automergeRequireAllStatusChecks",
    ":combinePatchMinorReleases",
    ":dependencyDashboard",
    ":enableVulnerabilityAlerts",
    ":ignoreModulesAndTests",
    ":ignoreUnstable",
    ":label(renovate)",
    ":prNotPending",
    ":renovatePrefix",
    ":separateMultipleMajorReleases",
    ":updateNotScheduled",
    "group:monorepos",
    "group:recommended",
    "workarounds:all",
  ],
  commitMessagePrefix: '[renovate]',
  deepExtract: true,
  reuseExistingBranch: true,
  dependencyDashboardAutoclose: true,
  docker: { pinDigests: true },
  exposeAllEnv: true,
  labels: ['renovate'],
  onboarding: false,
  platform: 'github',
  requireConfig: false,
  schedule: null,
  updateLockFiles: true,
  hostRules: [
    {
      hostType: 'maven',
      matchHost: 'https://maven.pkg.github.com/',
      token: process.env.GITHUB_TOKEN,
    },
  ],
  lockFileMaintenance: {
    automerge: true,
    enabled: true,
    labels: ['automerge'],
    reuseExistingBranch: true,
    schedule: null,
    updateLockFiles: true,
  },
  packageRules: [
    {
      matchUpdateTypes: ['major'],
      labels: ['major-update'],
      automerge: false,
    },
    {
      extends: ['group:springBoot'],
      automerge: false,
    },
    {
      'matchPackageNames': ['com.github.spotbugs:com.github.spotbugs.gradle.plugin'],
      'allowedVersions': '> 5.0.1'
    },
    {
      matchUpdateTypes: ['minor', 'patch'],
      matchCurrentVersion: '!/^0/',
      automerge: false,
      automergeType: 'branch',
      labels: ['automerge'],
    },
    {
      matchManagers: ['gradle'],
      additionalBranchPrefix: 'java-',
      groupName: 'java',
      labels: ['java'],
    },
    {
      matchDatasources: ['gradle-version'],
      additionalBranchPrefix: 'gradle-',
      labels: ['java'],
    },
  ]
}
